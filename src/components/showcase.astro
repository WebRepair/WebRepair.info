---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import sites from "~/data/showcase/sites.json";
---

<ContentSection title="Design" id="showcase">
  
    
    
</ContentSection>



<div class="embed-container">
  <div class="flex justify-center">
    <button id="view-button" class="px-10 border border-black hover:bg-slate-400">Vycentrova≈•</button>
  </div>

  <embed id="embed-element" src="https://ornate-custard-76dbaa.netlify.app/" class="mt-16 border border-black">
</div>

<style>
  .embed-container {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio for desktop and tablet screens */
    display: flex;
    justify-content: center;
    align-items: center;
}
  

  .embed-container embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 85%;
  }

  @media screen and (max-width: 600px) {
    .embed-container {
      padding-bottom: 200%; /* 4:3 aspect ratio for mobile screens */
      width: auto;
      height: auto;
    }
  }
</style>

<script>
  const viewButton = document.getElementById('view-button');
  const embedElement = document.getElementById('embed-element');

  viewButton.addEventListener('click', () => {
    embedElement.scrollIntoView({ behavior: 'smooth' });
  });
</script>



